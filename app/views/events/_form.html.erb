

<div class="col-lg-4" >
<div class="well bs-component">
    <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="field">
        <span style="color: white">Title</span><br>
        <%= f.text_field :Title, class:"form-control", placeholder:"Title"  %>
      </div>
      <div class="field">
        <span style="color: white">Description</span><br>
        <%= f.text_area :Description, class:"form-control", rows:"3", placeholder:"Description" %>
      </div>
      <div class="field">
        <span style="color: white">Address/Location</span><br>
        <%= f.text_field :Address, class:"form-control", placeholder:"Address" %>
      </div>
    
      
      <div class="field">
        <span style="color: white">Category of Event</span><br>
        <%= f.select( :Category, ['Concert','Emergency','Festival','Party'],{},  { :class => 'form-control', :id => 'select' }) %>
      </div>
      
      <div>
        <div class="field" style="float: left">
          <span style="color: white">Latitude</span><br>
          <%= f.number_field :Latitude, max:90, min:-90, class:"form-control" %>
        </div>
        <div class="field" style="float: right">
          <span style="color: white">Longitude</span><br>
          <%= f.number_field :Longitude, max:180, min:-180, class:"form-control" %>
        </div>
      </div>
      
      <div style="clear:both">
        <div class="field" style="float: left">
          <span style="color: white">Starting Date</span><br>
          <%= f.date_select :StartDate, {:order => [:day, :month, :year], :start_year => Date.current.year, :end_year => 2100}  %>
        </div>
      </div>

      <div style="clear: both">
        <div class="field" style="float: left">
          <span style="color: white">Ending Date</span><br>
          <%= f.date_select :EndDate, {:order => [:day, :month, :year], :start_year => Date.current.year, :end_year => 2100} %>
        </div>
      </div>
      
      <div style="clear: both">
        <div class="field" style="float: left">
          <span style="color: white">Starting Time</span><br>
          <%= f.time_field :StartTime, class:"form-control" %>
        </div>
        <div class="field" style="float: right">
          <span style="color: white">Ending Time</span><br>
          <%= f.time_field :EndTime, class:"form-control" %>
        </div>
      </div>
      
      <div class="actions" style="clear: both">
        <button type="reset" class="btn btn-warning">Clear</button>
        <button type="submit" class="btn btn-primary">Submit</button>
        <%= link_to 'View Events', events_path, class:"btn btn-success", style:"color:white" %>
      </div>
      
    <% end %>
</div>
</div>
<div style="float:left">
<h1>Map here</h1>
</div>
