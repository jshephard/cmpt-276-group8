<h1>Users Index</h1>
<% if logged_in? and current_user.is_administrator? %>
    <table>
      <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Admin</th>
            <th>Promoter</th>
            <th/>
          </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.is_administrator? ? 'Yes' : 'No' %></td>
          <td><%= user.is_promoter? ? 'Yes' : 'No' %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
<% end %>